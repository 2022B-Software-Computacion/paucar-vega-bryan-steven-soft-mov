<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/nombreEmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Ingrese nombre del empleado"
        android:minHeight="48dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/apellidoEmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Ingrese apellido del empleado"
        android:minHeight="48dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/sueldoEmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Ingrese el sueldo del empleado"
        android:minHeight="48dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edadEmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Ingrese edad del empleado"
        android:minHeight="48dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/idEmpleado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Ingrese ID del empleado"
        android:minHeight="48dp"
        android:textSize="16sp" />


</LinearLayout>